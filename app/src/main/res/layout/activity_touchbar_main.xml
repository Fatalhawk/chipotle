<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RedSmooth_4"
    tools:context="com.sensei.companion.display.activities.TouchBarActivity">

    <LinearLayout
        android:layout_width="576dp"
        android:layout_height="343dp"
        android:orientation="vertical"
        android:weightSum="3.1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <fragment
            android:id="@+id/fragment3"
            android:name="com.sensei.companion.display.program_managers.GenericProgramManager"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            tools:layout="@layout/touch_bar_fragment"
            />



        <fragment
            android:id="@+id/fragment4"
            android:name="com.sensei.companion.display.screen_selector.ScreenSelectorFragment"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_screen_selector"
            />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
