<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sensei.companion.display.program_managers.WordManager">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7eae5">

        <ImageButton
            android:id="@+id/underline_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/underline"
            app:layout_constraintRight_toLeftOf="@+id/italic_button"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/not_equal_button" />

        <ImageButton
            android:id="@+id/italic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/italic"
            android:layout_marginRight="100dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pi_button" />

        <ImageButton
            android:id="@+id/superscript_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="266dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/superscript"
            tools:layout_editor_absoluteX="450dp" />

        <ImageButton
            android:id="@+id/color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="179dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/text_color"
            tools:layout_editor_absoluteX="450dp" />

        <ImageButton
            android:id="@+id/spellcheck_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="266dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/spellcheck"
            tools:layout_editor_absoluteX="315dp" />

        <ImageButton
            android:id="@+id/strikethrough_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="179dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/strikethrough"
            tools:layout_editor_absoluteX="315dp" />

        <ImageButton
            android:id="@+id/numbered_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="181dp"
            android:layout_marginTop="266dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/numbered_list" />

        <ImageButton
            android:id="@+id/bulleted_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="167dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bulleted_list" />

        <ImageButton
            android:id="@+id/bold_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="181dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/underline_button"
            app:srcCompat="@drawable/bold"
            app:layout_constraintHorizontal_bias="0.478"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plus_minus_button" />

        <ImageButton
            android:id="@+id/square_root_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="20sp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/square_root"
            app:layout_constraintRight_toLeftOf="@+id/not_equal_button"
            app:layout_constraintLeft_toRightOf="@+id/plus_minus_button"
            android:layout_marginRight="0dp" />

        <ImageButton
            android:id="@+id/alpha_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="20sp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/alpha"
            android:layout_marginRight="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/pi_button"
            />


        <ImageButton
            android:id="@+id/pi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="20sp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pi"
            app:layout_constraintRight_toLeftOf="@+id/alpha_button"
            app:layout_constraintLeft_toRightOf="@+id/sigma_button"
            android:layout_marginRight="0dp" />

        <ImageButton
            android:id="@+id/sigma_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="20sp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sigma"
            app:layout_constraintRight_toLeftOf="@+id/pi_button"
            app:layout_constraintLeft_toRightOf="@+id/not_equal_button"
            android:layout_marginRight="0dp" />

        <ImageButton
            android:id="@+id/not_equal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="20sp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/not_equal"
            app:layout_constraintRight_toLeftOf="@+id/sigma_button"
            app:layout_constraintLeft_toRightOf="@+id/square_root_button"
            android:layout_marginRight="-2dp" />

        <ImageButton
            android:id="@+id/plus_minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="189dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="20sp"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:paddingTop="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/square_root_button"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus_minus"
            app:layout_constraintHorizontal_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
