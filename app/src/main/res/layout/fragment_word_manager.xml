<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sensei.companion.display.program_managers.WordManager">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7eae5">

        <ImageButton
            android:id="@+id/underline_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/underline"


            app:layout_constraintRight_toRightOf="@+id/strikethrough_button"
            app:layout_constraintLeft_toLeftOf="@+id/strikethrough_button"
            app:layout_constraintTop_toTopOf="@+id/italic_button" />

        <ImageButton
            android:id="@+id/italic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/italic"
            app:layout_constraintRight_toRightOf="@+id/color_button"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/radioRealButtonGroup"
            app:layout_constraintLeft_toLeftOf="@+id/color_button"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <ImageButton
            android:id="@+id/superscript_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/superscript"
            app:layout_constraintTop_toBottomOf="@+id/color_button"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/spellcheck_button"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp" />

        <ImageButton
            android:id="@+id/color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/text_color"
            app:layout_constraintRight_toRightOf="@+id/superscript_button"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/italic_button"
            app:layout_constraintLeft_toLeftOf="@+id/superscript_button"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <ImageButton
            android:id="@+id/spellcheck_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintLeft_toRightOf="@+id/numbered_list_button"
            app:layout_constraintRight_toLeftOf="@+id/superscript_button"
            app:srcCompat="@drawable/spellcheck"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/superscript_button" />

        <ImageButton
            android:id="@+id/strikethrough_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/strikethrough"
            app:layout_constraintRight_toRightOf="@+id/spellcheck_button"
            app:layout_constraintLeft_toLeftOf="@+id/spellcheck_button"
            app:layout_constraintTop_toTopOf="@+id/color_button" />

        <ImageButton
            android:id="@+id/numbered_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="181dp"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/numbered_list"
            app:layout_constraintRight_toLeftOf="@+id/spellcheck_button"
            android:layout_marginRight="8dp"
            android:layout_marginStart="181dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/spellcheck_button" />

        <ImageButton
            android:id="@+id/bulleted_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/numbered_list_button"
            app:srcCompat="@drawable/bulleted_list"
            app:layout_constraintRight_toRightOf="@+id/numbered_list_button"
            app:layout_constraintTop_toTopOf="@+id/strikethrough_button" />

        <ImageButton
            android:id="@+id/bold_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:paddingTop="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/bulleted_list_button"
            app:srcCompat="@drawable/bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintRight_toRightOf="@+id/bulleted_list_button"
            app:layout_constraintTop_toTopOf="@+id/underline_button"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />


        <co.ceryle.radiorealbutton.RadioRealButtonGroup
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:elevation="2dp"
            app:rrbg_animateDrawables_enter="overshoot"
            app:rrbg_animateDrawables_exit="overshoot"
            app:rrbg_animateDrawables_scale="1.2"
            app:rrbg_animateDrawables_tintColorFrom="@color/black"
            app:rrbg_animateDrawables_tintColorTo="@android:color/transparent"
            app:rrbg_animateDrawables_tintColor_duration="500"
            app:rrbg_animateTexts_enter="overshoot"
            app:rrbg_animateTexts_textColorFrom="@color/white"
            app:rrbg_animateTexts_textColorTo="@color/black"
            app:rrbg_animateTexts_textColor_duration="500"
            app:rrbg_backgroundColor="#D8D8D8"
            app:rrbg_borderColor="@color/white"
            app:rrbg_borderSize="1dp"
            app:rrbg_bottomLineColor="@color/blue_300"
            app:rrbg_bottomLineRadius="2dp"
            app:rrbg_bottomLineSize="0dp"
            app:rrbg_dividerColor="@color/black"
            app:rrbg_dividerPadding="12dp"
            app:rrbg_dividerRadius="2dp"
            app:rrbg_dividerSize="2dp"
            app:rrbg_enableDeselection="true"
            app:rrbg_radius="2dp"
            app:rrbg_selectorAboveOfBottomLine="false"
            app:rrbg_selectorAnimationType="translate_y"
            app:rrbg_selectorColor="@color/grey_400"
            app:rrbg_selectorRadius="0dp"
            app:rrbg_selectorSize="8dp"
            android:id="@+id/radioRealButtonGroup"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/italic_button"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp">

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_drawable="@drawable/plus_minus"
                app:rrb_drawableGravity="top"
                app:rrb_drawableHeight="40dp"
                app:rrb_drawablePadding="4dp"
                app:rrb_drawableWidth="30dp"
                app:rrb_rippleColor="@color/blue_500"
                app:rrb_selectorColor="@color/blue_500" />

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_drawable="@drawable/square_root"
                app:rrb_drawableGravity="top"
                app:rrb_drawableHeight="40dp"
                app:rrb_drawablePadding="4dp"
                app:rrb_drawableWidth="30dp"
                app:rrb_rippleColor="@color/blue_500"
                app:rrb_selectorColor="@color/blue_500" />

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_drawable="@drawable/not_equal"
                app:rrb_drawableGravity="top"
                app:rrb_drawableHeight="40dp"
                app:rrb_drawablePadding="4dp"
                app:rrb_drawableWidth="30dp"
                app:rrb_rippleColor="@color/blue_500"
                app:rrb_selectorColor="@color/blue_500" />

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_drawable="@drawable/sigma"
                app:rrb_drawableGravity="top"
                app:rrb_drawableHeight="40dp"
                app:rrb_drawablePadding="4dp"
                app:rrb_drawableWidth="30dp"
                app:rrb_rippleColor="@color/blue_500"
                app:rrb_selectorColor="@color/blue_500" />

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_drawable="@drawable/pi"
                app:rrb_drawableGravity="top"
                app:rrb_drawableHeight="40dp"
                app:rrb_drawablePadding="4dp"
                app:rrb_drawableWidth="30dp"
                app:rrb_rippleColor="@color/blue_500"
                app:rrb_selectorColor="@color/blue_500" />

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_drawable="@drawable/alpha"
                app:rrb_drawableGravity="top"
                app:rrb_drawableHeight="40dp"
                app:rrb_drawablePadding="4dp"
                app:rrb_drawableWidth="30dp"
                app:rrb_rippleColor="@color/blue_500"
                app:rrb_selectorColor="@color/blue_500" />




        </co.ceryle.radiorealbutton.RadioRealButtonGroup>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>