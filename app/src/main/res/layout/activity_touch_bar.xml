<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment7"
        android:name="com.sensei.companion.display.screen_selector.ScreenSelectorFragment"
        android:layout_width="500dp"
        android:layout_height="75dp"
        tools:layout="@layout/fragment_screen_selector"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_alignRight="@+id/fragment_container"
        android:layout_alignEnd="@+id/fragment_container"
        android:layout_alignLeft="@+id/fragment_container"
        android:layout_alignStart="@+id/fragment_container" />

    <FrameLayout
        android:layout_width="565dp"
        android:layout_height="200dp"
        android:layout_above="@+id/fragment7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/fragment_container">

        <fragment
            android:id="@+id/fragment"
            android:name="com.sensei.companion.display.program_managers.GenericProgramManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_generic_program_manager" />
    </FrameLayout>
</RelativeLayout>